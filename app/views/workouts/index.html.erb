<h1>Listing workouts</h1>

<% if @workouts.empty? %>
<p>Dude, you have no workouts.  You need to upload them <%= link_to "here", upload_training_log_path %>.</p>
<% end %>

<table width="100%">
  <tr>
    <th>Date</th>
    <th>Type</th>
    <th>Duration</th>
    <th>Distance</th>
    <th>Pace</th>
    <th>VDOT</th>
    <th><%= @custom_fields.empty? ? "" : @custom_fields[0].custom_field_type.name %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>



<% @workouts.each do |workout| %>
  <tr>
    <td><%= workout.date %></td>
    <td><%= workout.workout_type.name %></td>
    <td><%= workout.duration_formatted %></td>
    <td><%= workout.distance.nil? ? 0 : workout.distance.round(2) %></td>
    <td><%= workout.pace_formatted %></td>
    <td><%= workout.vdot.round(2) %></td>
    <td><%= workout.custom_fields[0].nil? ? '' : workout.custom_fields[0].value %></td>
    <td><%= link_to 'Show', workout %></td>
    <td><%= link_to 'Edit', edit_workout_path(workout) %></td>
    <td><%= link_to 'Destroy', workout, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Workout', new_workout_path %>

